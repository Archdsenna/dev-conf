{
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠️ ",
  "diagnostic.infoSign": "ⵢ",
  "diagnostic.signPriority": 1,
  "coc.preferences.jumpCommand": "vsp",
  "suggest.noselect": true,                                     // 补全开启时不要默认选中第一项
  "suggest.autoTrigger": "always",
  "suggest.selection": "recentlyUsed",
  "suggest.timeout": 500,
  "suggest.detailField": "preview",
  "semanticTokens.enable": true,
  "suggest.triggerAfterInsertEnter": true,                      // 进入插入模块即触发自动补全
}
